<UserControl x:Class="Telemetry_presentation_layer.Charts.ChartValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telemetry_presentation_layer.Charts"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Name="ValueColorCard"
                             Margin="5"
                             UniformCornerRadius="5"
                             materialDesign:ShadowAssist.ShadowDepth="Depth0"/>

        <Label Grid.Column="1"
               Name="ChannelNameLabel"
               VerticalContentAlignment="Center"/>

        <Label Grid.Column="2"
               Name="ChannelValueLabel"
               VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
