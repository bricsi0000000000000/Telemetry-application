        <Grid Name="importFileDarkening"
              Background="#E52B2B2B"
              Visibility="Hidden"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Viewbox Stretch="Uniform"
                     VerticalAlignment="Bottom">
                <Label Name="loading_file_lbl"
                       Grid.Row="0"
                       FontSize="20"
                       Content="Loading: file.csv"
                       Margin="10,0,10,0"
                       />
            </Viewbox>
            <ProgressBar x:Name="importFileProgressBar"
                         Value="60"
                         Grid.Row="1"
                         Height="16"
                         HorizontalContentAlignment="Center"
                         VerticalAlignment="Top"
                         Margin="100,0,100,0"
            />
        </Grid>
    </Grid>
</Window>
