            <DockPanel>
                <Menu DockPanel.Dock="Top" Margin="0,0,-0.4,0.4" Height="26">
                    <MenuItem Header="sddsadas" Height="26" Width="59" >
                    </MenuItem>
                    <MenuItem Header="dasdas" Click="switchFormToGroups"  Height="26" Width="40" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,0" RenderTransformOrigin="0.5,0.5"/>
