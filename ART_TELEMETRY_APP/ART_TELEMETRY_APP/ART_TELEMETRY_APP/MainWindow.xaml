<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ART_TELEMETRY_APP"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        x:Class="ART_TELEMETRY_APP.MainWindow"
        mc:Ignorable="d"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="ART telemetry" Height="1080" Width="1920" WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize"
    >

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" CanExecute="CommandBinding_CanExecute"></CommandBinding>
        <CommandBinding Command="{x:Static local:SwitchForms.SwitchToGroups}" CanExecute="CommandBinding_CanExecute" Executed="switchFormToGroupsExecuted"></CommandBinding>
        <CommandBinding Command="{x:Static local:SwitchForms.SwitchToCharts}" CanExecute="CommandBinding_CanExecute" Executed="switchFormToChartsExecuted"></CommandBinding>
        <CommandBinding Command="{x:Static local:ButtonCommands.ImportFile}" CanExecute="CommandBinding_CanExecute" Executed="importFileExecuted"></CommandBinding>
    </Window.CommandBindings>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="1858*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="108.8"/>
            </Grid.RowDefinitions>
            <Menu IsMainMenu="True" Grid.ColumnSpan="2" Margin="0,0,-0.4,109" Grid.RowSpan="2">
                <MenuItem Header="_File">
                    <MenuItem Header="Import file" Command="{x:Static local:ButtonCommands.ImportFile}">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Import" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Chart">
                    <MenuItem Header="Show Charts" Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Import" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Grid Grid.Column="0" Margin="0,0,0,-890" Grid.Row="1" >
                <Button x:Name="swicthFormToChartsBtn" Command="{x:Static local:SwitchForms.SwitchToCharts}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Margin="2,2,2,954"  ToolTip="Switch Form To Charts">
                    <materialDesign:PackIcon Kind="ChartLine" RenderTransformOrigin="0.55,0.5" Width="15" Height="15">
                        <materialDesign:PackIcon.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </materialDesign:PackIcon.RenderTransform>
                    </materialDesign:PackIcon>
                </Button>
                <Button x:Name="switchFormToGroupsBtn" Command="{x:Static local:SwitchForms.SwitchToGroups}" Height="Auto" Margin="2,47,2.4,908.6" ToolTip="Switch Form To Groups">
                    <materialDesign:PackIcon Kind="SelectGroup" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" RenderTransformOrigin="0.6,0.5" Width="15" Height="15">
                        <materialDesign:PackIcon.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </materialDesign:PackIcon.RenderTransform>
                    </materialDesign:PackIcon>
                </Button>
            </Grid>

            <materialDesign:ColorZone x:Name="chartsColorZone" Width="Auto" Height="989" Margin="0.6,0.6,-0.4,-880" Grid.Row="1" Grid.Column="1" Mode="Inverted" >
                <Grid x:Name="charts_grid" Height="989" VerticalAlignment="Bottom" Margin="0,0,0.2,-0.2"></Grid>
            </materialDesign:ColorZone>
            <materialDesign:ColorZone x:Name="groupsColorZone" Width="Auto" Height="989" Margin="0.6,0.6,-0.4,-880" Grid.Row="1" Grid.Column="1" Mode="Inverted" >
                <Grid Margin="0,0,-2.8,-0.2">
                    <Grid.RowDefinitions>
                    </Grid.RowDefinitions>
                    <materialDesign:DialogHost DialogClosing="addNewGroupDialog" Margin="0,0,-3,0">
                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel Margin="16">
                                <TextBox Margin="0 8 0 0" HorizontalAlignment="Stretch" x:Name="add_group_txtbox" materialDesign:HintAssist.IsFloating="True" materialDesign:HintAssist.Hint="New group"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        IsDefault="True"
                                                        Margin="0 8 8 0"
                                                        Command="materialDesign:DialogHost.CloseDialogCommand"
                                                        >
                                        <Button.CommandParameter>
                                            <s:Boolean>True</s:Boolean>
                                        </Button.CommandParameter>

                                        Add
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        IsCancel="True"
                                                        Margin="0 8 8 0"
                                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                                        <Button.CommandParameter>
                                            <s:Boolean>False</s:Boolean>
                                        </Button.CommandParameter>
                                        Cancel
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>
                        <Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,0,-0.4,526.8" >
                                <materialDesign:Card MinWidth="300" MaxWidth="300" materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="10">
                                    <Grid>
                                        <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                        Content="Add Group" Height="Auto"
                                        Margin="15,15,15,398.4"/>
                                        <TreeView x:Name="groups_tree_view"
                                          Margin="15,57,15,10.4"/>
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card MinWidth="300" MaxWidth="300" materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="10">
                                    <Grid>
                                        <Label x:Name="activeGroupNameLbl"
                                       Content="{Binding}"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Foreground="White"
                                       Margin="15,15,15,395.4"
                                       Height="29"
                                />
                                        <Grid Margin="0,55,0,-0.6">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="80"/>
                                                <RowDefinition Height="80"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <materialDesign:Card Grid.Row="0" Margin="15,0,15,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0"
                                                   VerticalContentAlignment="Center"
                                                   HorizontalContentAlignment="Center"
                                            >Zooming</Label>
                                                    <StackPanel Grid.Column="1" Name="group_options_zooming_options_grid">
                                                        <RadioButton GroupName="zooming_options" Click="groupOptionsZoomingOptionBtn" Name="zoomingOptionsX" Margin="0,0,0,0.4" Width="Auto">
                                                            <Label Content="X axis"/>
                                                        </RadioButton>
                                                        <RadioButton GroupName="zooming_options" Click="groupOptionsZoomingOptionBtn" Name="zoomingOptionsY" Margin="0,0,0.2,0.4" Width="Auto">
                                                            <Label Content="Y axis"/>
                                                        </RadioButton>
                                                        <RadioButton GroupName="zooming_options" Click="groupOptionsZoomingOptionBtn" Name="zoomingOptionsXY" Margin="0,0,0,0.4" Width="Auto">
                                                            <Label Content="XY axis"></Label>
                                                        </RadioButton>
                                                    </StackPanel>
                                                </Grid>
                                            </materialDesign:Card>
                                        </Grid>
                                        <materialDesign:Card Name="group_options_nothing" Visibility="Hidden">
                                            <Label Content="No selected group"
                                           Foreground="#DD222222"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"
                                           FontSize="30"></Label>
                                        </materialDesign:Card>
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card MinWidth="300" MaxWidth="300" materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="10">
                                    <Grid>
                                        <Label Name="selected_channel_lbl"
                                       Content="*Channel* options"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Foreground="White"
                                       Margin="15,15,15,395.4"
                                       Height="29"
                                />
                                        <Grid Margin="0,54,0,-0.6">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="47.2"/>
                                                <RowDefinition Height="56.8"/>
                                                <RowDefinition Height="267.2"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <materialDesign:Card Grid.Row="0" Margin="15,5,15,5.2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0"
                                                   Content="Line Smoothness"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   HorizontalContentAlignment="Left"
                                                   Margin="0,6,0.2,5.8"
                                                   Width="135"></Label>
                                                    <ToggleButton x:Name="line_smoothness_toogle_button"
                                                          Click="lineSmoothnessToggleButtonClick"
                                                          Margin="135,0,0,0.8"
                                                          Width="37"
                                                          HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                                                </Grid>
                                            </materialDesign:Card>
                                            <materialDesign:Card Grid.Row="1" Margin="15,4.8,15,7">
                                                <TextBox x:Name="stroke_thickness_txtbox"
                                                         TextChanged="stroke_thickness_txtbox_TextChanged"
                                                         materialDesign:HintAssist.Hint="Stroke Thickness"
                                                         materialDesign:HintAssist.IsFloating="True"
                                                         Foreground="White"
                                                         Margin="5,0,5,5"
                                                />
                                            </materialDesign:Card>
                                            <materialDesign:Card Grid.Row="2" Margin="15,5,15,4.2">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Label Grid.Row="0"
                                                   VerticalAlignment="Center"
                                                   Content="Stroke Color"/>
                                                    <materialDesign:ColorPicker Grid.Row="1"
                                                                                Name="stroke_color_colorpicker"
                                                                                ColorChanged="stroke_color_colorpicker_ColorChanged"
                                                                                />
                                                </Grid>
                                            </materialDesign:Card>
                                        </Grid>
                                        <materialDesign:Card Name="channel_options_nothing" Visibility="Hidden">
                                            <Label Content="No selected channel"
                                           Foreground="#DD222222"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"
                                           FontSize="30"></Label>
                                        </materialDesign:Card>
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,467,-0.4,-0.2">
                                <materialDesign:Card MinWidth="300" MaxWidth="300" materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="10">
                                    <Grid>
                                        <ComboBox Name="channels_cmbbox"
                                              Margin="15,16,15,449.6"
                                              Height="36"
                                              Foreground="White"
                                              ></ComboBox>
                                        <ListBox x:Name="active_channel_items_listbox" Margin="15,62,15,14.8"></ListBox>
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>
                        </Grid>
                    </materialDesign:DialogHost>

                </Grid>

                <!--<materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="10">
                        <Grid>
                            <TextBox x:Name="new_group_txt_box" HorizontalAlignment="Left" Height="23" Margin="19,62,0,-29" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Button x:Name="add_group_btn" Click="addGroupBtnClick" Content="Add Group" HorizontalAlignment="Left" Margin="200,61,0,-29" VerticalAlignment="Top" Width="75" Height="24"/>
                            <ComboBox x:Name="groups_cmb_box" HorizontalAlignment="Left" Margin="19,206,0,0" VerticalAlignment="Top" Width="142"/>
                        </Grid>
                    </materialDesign:Card>-->

                <!--<Button x:Name="import_file_btn" Click="importFileBtnClick" Margin="0,0,1784,0" Height="41" VerticalAlignment="Top">
                        <materialDesign:PackIcon Kind="Import"></materialDesign:PackIcon>
                    </Button>
                    <Button x:Name="draw_charts_btn" Click="drawChartsBtnClick" Margin="76,0,1713,0" Height="41" Width="Auto" VerticalAlignment="Top">
                        <materialDesign:PackIcon Kind="Show"></materialDesign:PackIcon>
                    </Button>-->
            </materialDesign:ColorZone>
        </Grid>
