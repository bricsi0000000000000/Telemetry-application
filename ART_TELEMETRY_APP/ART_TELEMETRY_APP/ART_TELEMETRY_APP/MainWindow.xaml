        <Grid Name="importFileDarkening" Background="#E52B2B2B" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="500*"/>
                <RowDefinition Height="500*"/>
            </Grid.RowDefinitions>
            <Label Name="loading_file_lbl"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   FontSize="80"
                   Margin="10,360,9.6,9.6"
                   Content="Loading: file.csv"
                   HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="1894" Height="156"
                   ></Label>
            <ProgressBar x:Name="importFileProgressBar"
                         
                         Value="60"
                         Grid.Row="1" Height="16" Margin="350,8.4,350,0" Width="Auto"
                         HorizontalContentAlignment="Center" VerticalAlignment="Top"
            />
        </Grid>
    </Grid>
</Window>
