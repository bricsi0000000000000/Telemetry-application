        <materialDesign:DialogHost HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   CloseOnClickAway="True"
                                   >
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="16">
                    <TextBlock Text="Add new pilot"/>
                    <TextBox Margin="0 8 0 0"
                             Name="addPilot_txtbox"
                             HorizontalAlignment="Stretch"
                             />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsDefault="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                Content="Add"
                                Click="addPilot_Click"
                                >
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                IsCancel="True"
                                Margin="0 8 8 0"
                                Command="materialDesign:DialogHost.CloseDialogCommand"
                                Content="Cancel"
                                >
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>

            <Grid>
               
                <WrapPanel Name="pilots_wrappanel"
                           />

                <Label Content="No pilots added"
                       Name="noPilots_lbl"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Foreground="#FF767676"
                       FontSize="20"
                       />
                <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}"
                                         x:Name="error_snack_bar"
                                         Foreground="White"
                                         />
                <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        Name="addPilot_btn"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="10"
                        Background="#FFE21B1B"
                        BorderBrush="#FFE21B1B"
                        >
                    <materialDesign:PackIcon Kind="RacingHelmet"
                                             Height="30"
                                             Width="30"
                                             />
                </Button>
            </Grid>
        </materialDesign:DialogHost>

       
    </Grid>
</UserControl>
